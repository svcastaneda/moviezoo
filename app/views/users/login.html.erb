<h2>Login</h2>
<div class="row">
  <div class="col s12 m4 l2 hidden-text">LUMOS</div>
  <div class="col s12 m4 l8">
    <%= form_for :user, url: login_path do |f| %>
  		<div class="input-field">
  	    <%= f.text_field :username %>
  			<%= f.label :username %>
  		</div>

  		<div class="input-field">
  	    <%= f.label :password %>
  	    <%= f.password_field :password %>
  		</div>

  		<div class="input-field">
      	<%= f.submit 'submit', class: 'btn ' %>
  		</div>
    <% end %>
  </div>
  <div class="col s12 m4 l2 hidden-text">LUMOS</div>
</div>
